<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.oormi.apguide.JournalActivity">
<!-- -->
    <ImageView
        android:id="@+id/imageViewBk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/apbk01"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/editTextPage"
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pagebk01"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="textMultiLine"
        android:padding="30dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonJournalNext"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/apnext"
        android:background="@null"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPage"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.674" />

    <ImageButton
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonJournalPrevious"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/apprevious"
        android:background="@null"
        android:layout_marginEnd="27dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPage"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.322" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonJournalNew"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/apnewpage"
        android:background="@null"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPage"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonJournalDelete"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/apdelete"
        android:background="@null"
        android:layout_marginEnd="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPage"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textViewMesg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>
